<TableLayout xmlns:a="http://schemas.android.com/apk/res/android"
             a:gravity="center_vertical"
             a:layout_width="fill_parent"
             a:layout_height="fill_parent"
             a:layout_weight="1"
             a:stretchColumns="*"
             a:shrinkColumns="*"
             a:layoutAnimation="@anim/layout_slide_right">

    <TableRow>
        <Button
                a:id="@+id/main_browse"
                a:layout_width="fill_parent"
                a:layout_height="wrap_content"
                a:layout_marginBottom="6dp"
                a:layout_marginRight="3dp"
                a:drawableLeft="@drawable/browse"
                a:drawablePadding="20dp"
                a:gravity="left|center_vertical"
                a:textAppearance="?android:attr/textAppearanceLarge"
                a:text="@string/main.my_music"/>

        <Button
                a:id="@+id/main_load_playlist"
                a:layout_width="fill_parent"
                a:layout_height="wrap_content"
                a:layout_marginBottom="6dp"
                a:layout_marginLeft="3dp"
                a:drawableLeft="@drawable/playlist"
                a:drawablePadding="20dp"
                a:gravity="left|center_vertical"
                a:textAppearance="?android:attr/textAppearanceLarge"
                a:text="@string/main.my_playlists"/>
    </TableRow>

    <TableRow>
        <Button
                a:id="@+id/main_search"
                a:layout_width="fill_parent"
                a:layout_height="wrap_content"
                a:layout_marginBottom="6dp"
                a:layout_marginRight="3dp"
                a:drawableLeft="@android:drawable/ic_menu_search"
                a:drawablePadding="20dp"
                a:gravity="left|center_vertical"
                a:textAppearance="?android:attr/textAppearanceLarge"
                a:text="@string/main.search"/>
    </TableRow>

</TableLayout>
