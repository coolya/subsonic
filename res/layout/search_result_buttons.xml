<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
              a:orientation="vertical"
              a:layout_width="fill_parent"
              a:layout_height="wrap_content">

    <TextView
            a:id="@+id/search_result_artists"
            a:text="@string/search_result.artists"
            a:layout_width="fill_parent"
            a:layout_height="wrap_content"
            a:textAppearance="?android:attr/textAppearanceSmall"
            a:textColor="#EFEFEF"
            a:textStyle="bold"
            a:background="#A5A5A5"
            a:gravity="center_vertical"
            a:paddingLeft="4dp"/>

    <TextView
            a:id="@+id/search_result_albums"
            a:text="@string/search_result.albums"
            a:layout_width="fill_parent"
            a:layout_height="wrap_content"
            a:textAppearance="?android:attr/textAppearanceSmall"
            a:textColor="#EFEFEF"
            a:textStyle="bold"
            a:background="#A5A5A5"
            a:gravity="center_vertical"
            a:paddingLeft="4dp"/>

    <TextView
            a:id="@+id/search_result_songs"
            a:text="@string/search_result.songs"
            a:layout_width="fill_parent"
            a:layout_height="wrap_content"
            a:textAppearance="?android:attr/textAppearanceSmall"
            a:textColor="#EFEFEF"
            a:textStyle="bold"
            a:background="#A5A5A5"
            a:gravity="center_vertical"
            a:paddingLeft="4dp"/>

    <TextView
            a:id="@+id/search_result_more_artists"
            a:text="@string/search_result.more"
            a:layout_width="fill_parent"
            a:layout_height="wrap_content"
            a:textAppearance="?android:attr/textAppearanceSmall"
            a:gravity="center"
            a:paddingTop="8dp"
            a:paddingBottom="8dp"/>

    <TextView
            a:id="@+id/search_result_more_albums"
            a:text="@string/search_result.more"
            a:layout_width="fill_parent"
            a:layout_height="wrap_content"
            a:textAppearance="?android:attr/textAppearanceSmall"
            a:gravity="center"
            a:paddingTop="8dp"
            a:paddingBottom="8dp"/>

    <TextView
            a:id="@+id/search_result_more_songs"
            a:text="@string/search_result.more"
            a:layout_width="fill_parent"
            a:layout_height="wrap_content"
            a:textAppearance="?android:attr/textAppearanceSmall"
            a:gravity="center"
            a:paddingTop="8dp"
            a:paddingBottom="8dp"/>

</LinearLayout>

