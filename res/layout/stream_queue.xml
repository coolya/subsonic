<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
              a:orientation="vertical"
              a:layout_width="fill_parent"
              a:layout_height="fill_parent">

    <TextView
            a:id="@+id/stream_queue_current"
            a:drawableLeft="@drawable/unknown_album"
            a:drawablePadding="10dp"
            a:textAppearance="?android:attr/textAppearanceLarge"
            a:gravity="left|center_vertical"
            a:layout_width="fill_parent"
            a:layout_height="wrap_content"
            a:layout_margin="5dp"/>

    <ListView
            a:id="@+id/stream_queue_list"
            a:layout_width="fill_parent"
            a:layout_height="fill_parent"
            a:layout_weight="1"
            a:background="@drawable/repeat_background"
            a:cacheColorHint="#00000000"/>

    <LinearLayout a:orientation="horizontal"
                  a:layout_width="fill_parent"
                  a:layout_height="wrap_content"
                  a:layout_marginTop="5dp"
                  a:gravity="center_horizontal">
        <ImageView
                a:id="@+id/stream_queue_previous"
                a:src="@drawable/media_backward_selector"
                a:focusable="true"
                a:paddingRight="30dp"
                a:layout_width="wrap_content"
                a:layout_height="fill_parent"/>
        <ImageView
                a:id="@+id/stream_queue_pause"
                a:src="@drawable/media_pause_selector"
                a:focusable="true"
                a:paddingRight="30dp"
                a:layout_width="wrap_content"
                a:layout_height="fill_parent"/>
        <ImageView
                a:id="@+id/stream_queue_start"
                a:src="@drawable/media_start_selector"
                a:focusable="true"
                a:paddingRight="30dp"
                a:layout_width="wrap_content"
                a:layout_height="fill_parent"/>
        <ImageView
                a:id="@+id/stream_queue_next"
                a:src="@drawable/media_forward_selector"
                a:focusable="true"
                a:layout_width="wrap_content"
                a:layout_height="fill_parent"/>
    </LinearLayout>

    <LinearLayout a:orientation="horizontal"
                  a:layout_width="fill_parent"
                  a:layout_height="wrap_content"
                  a:paddingLeft="10dp"
                  a:paddingRight="10dp">
        <TextView
                a:id="@+id/stream_queue_position"
                a:layout_width="wrap_content"
                a:layout_height="fill_parent"
                a:gravity="left"
                a:text="0:00"/>
        <TextView
                a:id="@+id/stream_queue_status"
                a:layout_width="wrap_content"
                a:layout_height="fill_parent"
                a:gravity="center_horizontal"
                a:layout_weight="1"/>
        <TextView
                a:id="@+id/stream_queue_duration"
                a:layout_width="wrap_content"
                a:layout_height="fill_parent"
                a:gravity="right"
                a:text="0:00"/>
    </LinearLayout>

    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            a:id="@+id/stream_queue_progress_bar"
            a:indeterminate="false"
            a:layout_width="fill_parent"
            a:layout_height="wrap_content"
            a:padding="10dp"/>

</LinearLayout>

