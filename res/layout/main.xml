<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
              a:orientation="vertical"
              a:layout_width="fill_parent"
              a:layout_height="fill_parent">

    <LinearLayout
            a:orientation="vertical"
            a:layout_width="fill_parent"
            a:layout_height="wrap_content"
            a:layoutAnimation="@anim/layout_slide_down">

        <LinearLayout
                a:orientation="horizontal"
                a:layout_width="fill_parent"
                a:layout_height="wrap_content">
            <TextView
                    a:id="@+id/main_server"
                    a:layout_width="wrap_content"
                    a:layout_height="wrap_content"
                    a:layout_marginTop="6dip"
                    a:layout_marginLeft="6dip"
                    a:layout_gravity="top|left"
                    a:textColor="@color/secondaryForeground"
                    a:textSize="12dip"/>
            <TextView
                    a:id="@+id/main_version"
                    a:layout_width="wrap_content"
                    a:layout_height="wrap_content"
                    a:layout_marginTop="6dip"
                    a:layout_marginRight="6dip"
                    a:layout_gravity="top|right"
                    a:layout_weight="1"
                    a:gravity="right"
                    a:textColor="@color/secondaryForeground"
                    a:textSize="12dip"/>
        </LinearLayout>

        <ImageView
                a:layout_width="wrap_content"
                a:layout_height="wrap_content"
                a:layout_marginTop="12dip"
                a:layout_gravity="center_horizontal"
                a:layout_weight="1"
                a:src="@drawable/subsonic_white"/>
    </LinearLayout>

    <!--<ListView a:id="@+id/main_list"-->
    <!--a:layout_width="fill_parent"-->
    <!--a:layout_height="0dip"-->
    <!--a:layout_weight="1.0"/>-->
    <ScrollView
            a:layout_width="fill_parent"
            a:layout_height="wrap_content">

        <LinearLayout a:orientation="vertical"
                      a:layout_width="fill_parent"
                      a:layout_height="wrap_content">

            <TextView
                    a:id="@+id/main_select_server"
                    a:text="@string/main.select_server"
                    a:drawableLeft="@drawable/select_server"
                    a:layout_width="fill_parent"
                    a:layout_height="wrap_content"
                    a:textAppearance="?android:attr/textAppearanceLarge"
                    a:gravity="center_vertical"
                    a:paddingLeft="6dp"
                    a:minHeight="?android:attr/listPreferredItemHeight"/>

            <TextView
                    a:id="@+id/main_settings"
                    a:text="@string/main.settings"
                    a:drawableLeft="@drawable/settings"
                    a:layout_width="fill_parent"
                    a:layout_height="wrap_content"
                    a:textAppearance="?android:attr/textAppearanceLarge"
                    a:gravity="center_vertical"
                    a:paddingLeft="6dp"
                    a:minHeight="?android:attr/listPreferredItemHeight"/>

            <TextView
                    a:id="@+id/main_help"
                    a:text="@string/main.help"
                    a:drawableLeft="@drawable/help"
                    a:layout_width="fill_parent"
                    a:layout_height="wrap_content"
                    a:textAppearance="?android:attr/textAppearanceLarge"
                    a:gravity="center_vertical"
                    a:paddingLeft="6dp"
                    a:minHeight="?android:attr/listPreferredItemHeight"/>

        </LinearLayout>
    </ScrollView>

    <include layout="@layout/button_bar"/>

</LinearLayout>

