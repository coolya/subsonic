<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
              a:orientation="vertical"
              a:layout_width="fill_parent"
              a:layout_height="fill_parent">

    <ImageView
            a:layout_width="fill_parent"
            a:layout_height="wrap_content"
            a:src="@drawable/subsonic_white"
            a:layout_marginTop="20dip"/>

    <LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
                  a:orientation="vertical"
                  a:gravity="center_vertical"
                  a:layout_width="fill_parent"
                  a:layout_height="fill_parent"
                  a:layout_weight="1">

        <Button
                a:id="@+id/main_browse"
                a:layout_width="fill_parent"
                a:layout_height="wrap_content"
                a:layout_marginBottom="6dp"
                a:drawableLeft="@android:drawable/ic_menu_view"
                a:drawablePadding="20dp"
                a:gravity="left|center_vertical"
                a:textAppearance="?android:attr/textAppearanceLarge"
                a:text="Browse music"/>

        <Button
                a:id="@+id/main_stream_queue"
                a:layout_width="fill_parent"
                a:layout_height="wrap_content"
                a:layout_marginBottom="6dp"
                a:drawableLeft="@drawable/playlist"
                a:drawablePadding="20dp"
                a:gravity="left|center_vertical"
                a:textAppearance="?android:attr/textAppearanceLarge"
                a:text="Playlist"/>

        <Button
                a:id="@+id/main_download_queue"
                a:layout_width="fill_parent"
                a:layout_height="wrap_content"
                a:drawableLeft="@android:drawable/ic_menu_save"
                a:drawablePadding="20dp"
                a:gravity="left|center_vertical"
                a:textAppearance="?android:attr/textAppearanceLarge"
                a:text="Download queue"/>

    </LinearLayout>

    <LinearLayout a:orientation="horizontal"
                  a:layout_width="fill_parent"
                  a:layout_height="wrap_content">

        <ImageView
                a:id="@+id/main_settings"
                a:layout_width="wrap_content"
                a:layout_height="wrap_content"
                a:src="@android:drawable/ic_menu_preferences"
                a:gravity="left"/>

        <TextView
                a:layout_width="wrap_content"
                a:layout_height="wrap_content"
                a:layout_weight="1"/>

        <ImageView
                a:id="@+id/main_help"
                a:layout_width="wrap_content"
                a:layout_height="wrap_content"
                a:src="@android:drawable/ic_menu_help"
                a:gravity="right"/>
    </LinearLayout>
</LinearLayout>

