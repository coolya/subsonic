<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="net.sourceforge.subsonic.android"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application android:label="@string/app_name">

        <activity android:name="MainActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="SelectArtistActivity"
                  android:label="@string/select_artist"/>

        <activity android:name="SelectAlbumActivity"
                  android:label="@string/select_album"/>

        <activity android:name="SettingsActivity"
                  android:label="Settings"/>

        <service android:name="DownloadService"
                 android:label="Download"/>

    </application>

</manifest>
